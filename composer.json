{
    "name": "extly/xtlaravelstarter",
    "type": "project",
    "description": "This project is a good starting point to begin using the Laravel Framework on Joomla.",
    "keywords": [
        "joomla",
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8.0",
        "fideloper/proxy": "^4.4",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^8.12",
        "laravel/tinker": "^2.5",
        "laravel/ui": "^3.1"
    },
    "require-dev": {
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.9.1",
        "laravel-frontend-presets/tailwindcss": "^4.3",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "vendor-dir": "library/vendor"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "php-prefixer": {
            "project-name": "XT Laravel Starter for Joomla",
            "prefix-for-namespaces": "Extly",
            "prefix-for-global-objects": "XT_"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "library/app/",
            "Database\\Factories\\": "library/database/factories/",
            "Database\\Seeders\\": "library/database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "library/tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
